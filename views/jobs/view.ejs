<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | NetWorked</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light" data-user-id="<%= user ? user._id : '' %>">
    <%- include('../partials/navbar') %>
    
    <main class="container py-4">
        <%- include('../partials/messages') %>
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-4">
                            <img src="<%= job.company.photo %>" alt="<%= job.company.companyName %>" 
                                 class="rounded me-3" width="80" height="80" style="object-fit: cover;">
                            <div>
                                <h3 class="mb-1"><%= job.title %></h3>
                                <p class="mb-1">
                                    <a href="/profile/<%= job.company._id %>" class="text-decoration-none">
                                        <%= job.company.companyName %>
                                    </a>
                                </p>
                                <p class="text-muted mb-0">
                                    <% if (job.location) { %>
                                        <i class="bi bi-geo-alt"></i> <%= job.location %>
                                    <% } %>
                                    <% if (job.remote) { %>
                                        <span class="badge bg-success ms-2">Remote</span>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                        
                        <div class="d-flex flex-wrap gap-2 mb-4">
                            <span class="badge bg-primary fs-6"><%= job.type %></span>
                            <% if (job.salary && (job.salary.min || job.salary.max)) { %>
                                <span class="badge bg-success fs-6">
                                    <% if (job.salary.min && job.salary.max) { %>
                                        <%= job.salary.currency %> <%= job.salary.min.toLocaleString() %> - <%= job.salary.max.toLocaleString() %>
                                    <% } else if (job.salary.min) { %>
                                        From <%= job.salary.currency %> <%= job.salary.min.toLocaleString() %>
                                    <% } else { %>
                                        Up to <%= job.salary.currency %> <%= job.salary.max.toLocaleString() %>
                                    <% } %>
                                </span>
                            <% } %>
                            <% if (job.experience) { %>
                                <span class="badge bg-secondary fs-6"><%= job.experience %></span>
                            <% } %>
                        </div>
                        
                        <% if (!isOwner && !hasApplied) { %>
                            <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#applyModal">
                                <i class="bi bi-send"></i> Apply Now
                            </button>
                        <% } else if (hasApplied) { %>
                            <button class="btn btn-secondary btn-lg" disabled>
                                <i class="bi bi-check"></i> Already Applied
                            </button>
                        <% } %>
                    </div>
                </div>
                
                <div class="card mb-4">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0">Job Description</h5>
                    </div>
                    <div class="card-body">
                        <p style="white-space: pre-line;"><%= job.description %></p>
                    </div>
                </div>
                
                <% if (job.responsibilities && job.responsibilities.length > 0) { %>
                    <div class="card mb-4">
                        <div class="card-header bg-transparent">
                            <h5 class="mb-0">Responsibilities</h5>
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                <% job.responsibilities.forEach(function(resp) { %>
                                    <li><%= resp %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                <% } %>
                
                <% if (job.requirements && job.requirements.length > 0) { %>
                    <div class="card mb-4">
                        <div class="card-header bg-transparent">
                            <h5 class="mb-0">Requirements</h5>
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                <% job.requirements.forEach(function(req) { %>
                                    <li><%= req %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                <% } %>
                
                <% if (job.skills && job.skills.length > 0) { %>
                    <div class="card mb-4">
                        <div class="card-header bg-transparent">
                            <h5 class="mb-0">Required Skills</h5>
                        </div>
                        <div class="card-body">
                            <% job.skills.forEach(function(skill) { %>
                                <span class="badge bg-primary me-2 mb-2 fs-6"><%= skill %></span>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
            
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0">About the Company</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <img src="<%= job.company.photo %>" alt="<%= job.company.companyName %>" 
                                 class="rounded-circle mb-2" width="80" height="80" style="object-fit: cover;">
                            <h5 class="mb-0"><%= job.company.companyName %></h5>
                            <% if (job.company.industry) { %>
                                <small class="text-muted"><%= job.company.industry %></small>
                            <% } %>
                        </div>
                        <% if (job.company.companyDescription) { %>
                            <p class="small"><%= job.company.companyDescription.substring(0, 200) %>...</p>
                        <% } %>
                        <% if (job.company.companySize) { %>
                            <p class="small mb-2">
                                <i class="bi bi-people me-2"></i><%= job.company.companySize %> employees
                            </p>
                        <% } %>
                        <a href="/profile/<%= job.company._id %>" class="btn btn-outline-primary btn-sm w-100">
                            View Company Profile
                        </a>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0">Job Details</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <i class="bi bi-briefcase me-2 text-muted"></i>
                            <strong>Type:</strong> <%= job.type %>
                        </p>
                        <% if (job.location) { %>
                            <p class="mb-2">
                                <i class="bi bi-geo-alt me-2 text-muted"></i>
                                <strong>Location:</strong> <%= job.location %>
                            </p>
                        <% } %>
                        <% if (job.education) { %>
                            <p class="mb-2">
                                <i class="bi bi-mortarboard me-2 text-muted"></i>
                                <strong>Education:</strong> <%= job.education %>
                            </p>
                        <% } %>
                        <% if (job.deadline) { %>
                            <p class="mb-2">
                                <i class="bi bi-calendar me-2 text-muted"></i>
                                <strong>Deadline:</strong> <%= new Date(job.deadline).toLocaleDateString() %>
                            </p>
                        <% } %>
                        <p class="mb-0 text-muted small">
                            Posted <%= new Date(job.createdAt).toLocaleDateString() %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <div class="modal fade" id="applyModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Apply for <%= job.title %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/jobs/<%= job._id %>/apply" method="POST">
                    <div class="modal-body">
                        <p class="text-muted small mb-3">
                            Your profile will be shared with <%= job.company.companyName %>.
                            <a href="/profile" target="_blank">Review your profile</a>
                        </p>
                        <div class="mb-3">
                            <label for="coverLetter" class="form-label">Cover Letter (optional)</label>
                            <textarea class="form-control" id="coverLetter" name="coverLetter" rows="5" 
                                      placeholder="Introduce yourself and explain why you're interested in this position..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit Application</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
